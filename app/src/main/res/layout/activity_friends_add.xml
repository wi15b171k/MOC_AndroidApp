<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.matthias.myapplication.FriendsAddActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:paddingTop="5sp"
            android:src="@drawable/kontakte"
            tools:src="@drawable/kontakte"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find your Friends"
            android:textSize="35sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_filter_friends"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:paddingTop="5sp"
            android:src="@drawable/search"
            tools:src="@drawable/search"/>
        <EditText
            android:id="@+id/et_search_string"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="25sp"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_friends_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"></android.support.v7.widget.RecyclerView>
</LinearLayout>

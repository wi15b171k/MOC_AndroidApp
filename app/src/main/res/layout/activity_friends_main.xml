<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.matthias.myapplication.FriendsMainActivity">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:paddingTop="5sp"
            android:src="@drawable/kontakte"
            tools:src="@drawable/kontakte"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:paddingBottom="30dp"
            android:text="Show me trips of..."
            android:textSize="35sp"/>
    </LinearLayout>
    <!-- The scrollable main content. -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_friends_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="53dp"
        android:paddingBottom="53dp">
    </android.support.v7.widget.RecyclerView>

    <!-- This is a copy of the navigation section. -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_friend_requests"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/info"
            tools:src="@drawable/info"/>
        <ImageView
            android:id="@+id/iv_add_friends"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/kontakt_hinzufuegen"
            tools:src="@drawable/kontakt_hinzufuegen"/>
    </LinearLayout>
</FrameLayout>
